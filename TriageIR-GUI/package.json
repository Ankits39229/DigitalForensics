{
  "name": "triageir-gui-new",
  "version": "1.0.0",
  "description": "TriageIR GUI - Clean and Functional Interface",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:portable": "electron-builder --config.portable=true --config.nsis.oneClick=false",
    "dist": "electron-builder --publish=never",
    "test": "node test.js"
  },
  "keywords": [
    "forensics",
    "incident-response",
    "digital-forensics",
    "triage",
    "security"
  ],
  "author": "TriageIR Team",
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4"
  },
  "build": {
    "appId": "com.triageir.gui",
    "productName": "TriageIR GUI",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon.ico"
    },
    "portable": {
      "artifactName": "${productName}-Portable.${ext}"
    },
    "extraResources": [
      {
        "from": "../TriageIR-CLI/target/release/triageir-cli.exe",
        "to": "triageir-cli.exe"
      }
    ]
  }
}